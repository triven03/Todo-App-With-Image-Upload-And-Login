<style>
    div{
        margin: 10px;
    }
    form{
        margin: auto;
        width: fit-content;
        border: 3px solid red;
        border-radius: 2px;
        padding: 10px;
    }  
    a:hover {
        color: green;
    }
    
    a {
        text-decoration: none;
        margin-left: 20px;
    } 
    
    h1 {
      color: maroon;
      margin-left: 40px;
    }
