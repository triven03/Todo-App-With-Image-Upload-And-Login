    <form method="post" action="/login" >
      <div> User Id :<input placeholder="userid" name="userid"/></div>
      <div> Password :<input type="password" placeholder="password" name="password"/></div>
      <div> <input type="submit" value="login"/> <a href="/signup">click here to signup</a></div>
    <% if(error){ %>
      <h1> <%= error %> </h1>
    <% } %>
    </form>
    
    
    